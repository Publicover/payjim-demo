<center>
  <div class='client-login'>
    <h3>JIM'S BILLING APP</h3><br />
    <%= form_tag '/login', method: :post, class: "form-group" do %>
      <%= content_tag :div, class: "form-group" do %>
        <p><%= email_field_tag :email, nil, placeholder: "Email" %></p>
        <p><%= password_field_tag :password, nil, placeholder: "Password" %></p>
      <% end %>
      <p><%= submit_tag 'Log in', class: "btn btn-secondary"%></p>
    <% end %>
    <br />

    <p><%= link_to 'Forget your password?', new_password_reset_path %></p><br />
    <p>If it's your first time here, you'll probably want to<br />
    <%= link_to 'change your password right away', new_password_reset_path %>.</p>
  </div>
</center>
